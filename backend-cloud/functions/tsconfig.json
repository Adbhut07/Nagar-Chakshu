{
  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "module": "CommonJS", // Important for Firebase Functions
    "target": "ES2020",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
